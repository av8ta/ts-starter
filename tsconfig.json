{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "checkJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  }
}